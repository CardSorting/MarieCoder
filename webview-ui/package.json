		"react-virtuoso": "^4.12.3",
		"styled-components": "^6.1.15",
		"turndown": "^7.2.1"
	},
	"devDependencies": {
		"@storybook/react-vite": "^9.1.6",
		"@tailwindcss/vite": "^4.1.4",
		"@testing-library/jest-dom": "^6.6.3",
