# NOORMME Next.js SAAS Template Environment Configuration
# Copy this file to .env.local and configure your values
# Following NORMIE DEV methodology - clean, unified, production-ready

# =============================================================================
# REQUIRED - Core Configuration
# =============================================================================

# Database Configuration
DATABASE_URL="file:./database.sqlite"

# NextAuth Configuration (Required for authentication)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-minimum-32-characters"

# Application Configuration
APP_NAME="NOORMME SAAS"
APP_URL="http://localhost:3000"
APP_DOMAIN="localhost"
NODE_ENV="development"

# Security Configuration
JWT_SECRET="your-jwt-secret-key-minimum-32-characters"
ENCRYPTION_KEY="your-encryption-key-32-characters"

# =============================================================================
# OPTIONAL - OAuth Providers
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# GitHub OAuth
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# =============================================================================
# OPTIONAL - Payment Providers
# =============================================================================

# Stripe
STRIPE_PUBLISHABLE_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# =============================================================================
# OPTIONAL - Email Configuration
# =============================================================================

SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""

# =============================================================================
# OPTIONAL - Feature Flags
# =============================================================================

ENABLE_REGISTRATION="true"
ENABLE_BILLING="true"
ENABLE_NOTIFICATIONS="true"
ENABLE_ANALYTICS="false"
ENABLE_ADMIN_PANEL="true"
ENABLE_API_DOCS="true"

# =============================================================================
# OPTIONAL - Development & Testing
# =============================================================================

# Development mode settings
DEV_MODE="true"
MOCK_PAYMENTS="false"
ENABLE_DEBUG_LOGS="true"

# Testing configuration
TEST_DATABASE_URL="file:./test.sqlite"
ENABLE_TEST_MODE="false"

# =============================================================================
# PRODUCTION - Additional Configuration
# =============================================================================

# For production deployment
SUPPORT_EMAIL="support@your-domain.com"
ADMIN_EMAIL="admin@your-domain.com"

# Rate limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# Cache configuration
REDIS_URL=""
CACHE_TTL="3600"

# Monitoring
SENTRY_DSN=""
LOG_LEVEL="info"