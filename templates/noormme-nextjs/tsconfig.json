{
	"compilerOptions": {
		"target": "ES2020",
		"lib": [
			"ES2020"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": false,
		"outDir": "./dist",
		"esModuleInterop": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	},
	"include": [
		"src/**/*.ts",
		"scripts/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
